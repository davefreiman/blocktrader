<fieldset>

	<legend> Sign In </legend>

		<%= form_tag sessions_path, :method => :post do %>
			<div class="row">
				<div class="large-6 columns">
					<%= label_tag :email %>
					<%= text_field_tag :email, params[:email], :placeholder => "john@mail.com" %> 
				</div>
			</div>

			<div class="row">
				<div class="large-6 columns">
					<%= label_tag :password %>
					<%= password_field_tag :password %>
				</div>
			</div>

			<div class="row">
				<div class="large-6 columns">
					<%= submit_tag 'Login', :class => "button" %>
				</div>
			</div>

		<% end %>
</fieldset>