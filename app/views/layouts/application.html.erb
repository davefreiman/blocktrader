<!DOCTYPE html>
<html>
<head>
  <title>Blocktrader</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<% if flash[:notice] %>
	<div class="notice">
	  <p><%= flash[:notice] %></p>
	</div>  
	<% end %>

	<% if flash[:alert] %>
	<div class="alert">
	  <p><%= flash[:alert] %></p>
	</div>  
	<% end %>

<%= yield %>

</body>
</html>
