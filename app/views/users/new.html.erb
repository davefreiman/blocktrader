
<fieldset>

	<legend> Sign Up </legend>

<%= form_for @user do |f| %>
<div class="row">
	<div class="large-6 columns">
		<%= f.label :first_name %>
		<%= f.text_field :first_name %>
	</div>
</div>
</div>

<div class="row">
	<div class="large-6 columns">
		<%= f.label :last_name %>
		<%= f.text_field :last_name %>
	</div>
</div>

<div class="row">
	<div class="large-6 columns">
		<%= f.label :username %>
		<%= f.text_field :username %>
	</div>
</div>

<div class="row">
	<div class="large-6 columns">
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div>
</div>

<div class="row">
	<div class="large-6 columns">
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>
</div>

<div class="row">
	<div class="large-6 columns">
		<%= f.submit :class => "button" %>
	</div>
</div>
<%end%>