<div class="user-container">


  <div class="row">
    
      <div class="user-header text-center">
        <div class="small-12 columns"> 

        <div class="small-6 columns">  
          <div class="user-avatar">
            <% @user.avatars.each do |i| %>
              <a href="<%= i.file%>" id="user-profile-avatar"><img src ="<%= i.file_url(:thumb)%>" /></a>
            <% end %> 
          </div>
        </div>

        <div class="user-info">
          <div class="small-6 columns">  
            <h1 class="subheader"><%= @user.first_name %> <%=@user.last_name %></h1>
            <h4 class="subheader"><%= @user.email %> ,
               <%if @locations %>
                <% @locations.each do |location| %>
                   <%= location.address %>
                <%end%>
              <% end %>  
             </h4>
             <h5 class="subheader">Average rating: <%= rating_average(@ratings).round(2) %></h5>

             <%= link_to "Edit Account", edit_user_path(@user), :class => "button tiny round"%> 
        <%= link_to "Manage Locations", user_locations_path(@user), :class => "button tiny round" %>
         <%= link_to "Manage Avatar", user_avatars_path(@user), :class => "button tiny round" %> 


          </div>
        </div>
      </div>
    </div>
  </div>

</div>

<div class="row">

<div class="small-12 columns">
  <div class="section-container accordion" data-section="accordion">
    <section class="active">
      <p class="title" data-section-title><a href="#">Auctions Won</a></p>
      <div class="content" data-section-content>
        <% @auctions.each do |auction| %>
            
              <% if auction.winner == @user %>
               <p><%= link_to auction.name, auction_path(auction) %></p>
              <% end %>
            
          <% end %> 
      </div>
    </section>

    <section>
      <p class="title" data-section-title><a href="#">Ratings</a></p>
      <div class="content" data-section-content>
        <% @ratings.each do |rating| %>
          <p>Score: <%= rating.score %> </p>
          <p>Comment: <%= rating.comment %> </p>
        <% end %>
      </div>
    </section>

    <section>
      <p class="title" data-section-title><a href="#">Notifications</a></p>
      <div class="content" data-section-content>
        <% @notifications.each do |notification| %>
          <p><%= link_to notification.notice, auction_path(notification.auction_id) %> </p>
        <% end %>
      </div>
    </section>

  </div>
</div>



      

 </div>







