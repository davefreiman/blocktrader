<div class="user-show-container">

<h3><%= @user.first_name %> <%=@user.last_name %></h3>

<p><%= link_to "Edit Account", edit_user_path(@user), :class => "button tiny round" %> 
<%= link_to "Manage Locations", user_locations_path(@user), :class => "button tiny round" %> </p>

<h5>Auctions Won: </h5>
<% @auctions.each do |auction| %>
  <ul>
    <% if auction.winner == @user.username %>
      <li><%= link_to auction.name, auction_path(auction) %></li>
    <% end %>
  </ul>
<% end %> 

<%if @notifications %>
<h5>Notifications:</h5>
<ul>
<% @notifications.each do |note| %>
  <li><%= note.notice %></li>
<%end%>
</ul>
<%end%>

<%if @locations %>
<h5>Locations:</h5>
  <% @locations.each do |location| %>
    <p> <%= location.address %> </p>
    <ul>
      <li>Latitude: <%= location.latitude %> </li>
      <li>Longitude: <%= location.longitude %> </li>
    </ul>  
    <%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{location.latitude}%2C#{location.longitude}" %>

  <%end%>
<% end %>  





</div>