<div id="container1">

	<div class="large-12 columns">
		<div id="title-container">
			<h1 id="subtitle"> Dolla Dolla Bills Y'all.</h1>
			<h3 id="segment-subtitle"><small>Get that paper.</small></h3>
			</div>
		</div>
	
</div>

<%= form_for @auction do |f| %>
	<div class="text-centered">
		<div class="row">
	  		<div class="large-8 columns">
				<%= f.label :name %>
				<%= f.text_field :name %>
			</div>
		</div>
		<div class="field">
			<%= f.label :description %>
			<%= f.text_area :description %>
		</div>
		<div class="field">
			<%= f.label :duration %>
			<%= f.number_field :duration %>
		</div>
		<div class="field">
			<%= f.label :start_price %>
			<%= f.number_field :start_price %>
		</div>

		<div class="field"> 
			<%= f.label :location_id %>
			<%= f.select :location_id, current_user.locations.collect {|loc| [loc.address, loc.id]}%>
		</div>

		<div class="actions">
			<%= f.submit %>
		</div>	
	</div>
<%end%>