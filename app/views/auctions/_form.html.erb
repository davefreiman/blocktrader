
<%= form_for @auction do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :duration %>
    <%= f.number_field :duration %>
  </div>
  <div class="field">
    <%= f.label :start_price %>
    <%= f.number_field :start_price %>
  </div>

  <div class="field"> 
    <%= f.label :location_id %>
    <%= f.select :location_id, current_user.locations.collect {|loc| [loc.address, loc.id]}%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>  
<%end%>